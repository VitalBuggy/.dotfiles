# RESTART sxhkd
super + Escape
    pkill -USR1 -x sxhkd


# Books dmenu script
super + shift + b
    ~/.local/bin/books.sh

# APPLICATIONS

super + shift + a
    ~/.local/bin/choose_browsers

super + shift + l
    firefox-bin -P School

super + shift + m
    st -c mus ncmpcpp

super + shift + e
    emacs

super + shift + s
    st -c neomutt neomutt

# VOLUME CONTROL

super + shift + equal
    pamixer --allow-boost -i 15

super + equal
    pamixer --allow-boost -i 5

super + shift + minus
    pamixer --allow-boost -d 15

super + minus
    pamixer --allow-boost -d 5

# APP LAUNCHERS

super + p
    dmenu_run -p "Run: "

super + shift + p
    rofi -show drun -theme bruh -show-icons

super + F2
    mpc toggle

super + F3
    slock
